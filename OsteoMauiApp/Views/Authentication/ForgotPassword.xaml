<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OsteoMAUIApp.Views.Authentication.ForgotPassword"
             xmlns:inputlayout="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             Title="ForgotPassword">
    <ContentPage.Content>
        <Grid>
            <BoxView  AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All" x:Name="DrawerOverlay">
                <BoxView.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnOverlayClicked" />
                </BoxView.GestureRecognizers>
            </BoxView>
          
            <Frame x:Name="DrawerFrame" BackgroundColor="White" HasShadow="True" CornerRadius="0" Padding="10" VerticalOptions="End" AbsoluteLayout.LayoutBounds="0.5,1,-1,-1" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional">
                <Frame.GestureRecognizers>
                    <PanGestureRecognizer PanUpdated="OnPanUpdated"/>
                </Frame.GestureRecognizers>
                
                <StackLayout>

                    <Frame WidthRequest="100" HorizontalOptions="Center" HeightRequest="5" MinimumHeightRequest="5" BackgroundColor="{StaticResource ThemeColor}" >
                    </Frame>
                    <StackLayout Spacing="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Image Margin="0,50,0,0" Source="osteologo.png" Aspect="Center" HorizontalOptions="Center"/>
                        </Grid>
                        <Label FontSize="25" Style="{StaticResource fontAttribute}"  Text="Recover Password"  Margin="0,50,0,0"/>
                        <Label FontSize="15" Text="Forgot your password ? No Problem. Just enter your email or phonenumber below and we will send you a password reset link." Style="{StaticResource HelperMultilineText}"    Margin="0,10,0,0"/>
                    </StackLayout>
                    <StackLayout Margin="0,30,0,30" Spacing="20" Orientation="Horizontal" >
                        <!-- Practitioner Selection -->
                        <Border Padding="10" x:Name="PractitionerFrame" Stroke="#00d9bc" HorizontalOptions="FillAndExpand">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                <Image Source="practitioner.png" Style="{StaticResource SelectUserTypeImage}"/>
                                <Label Text="Practitioner" Style="{StaticResource SelectUserTypeLabel}" />
                            </StackLayout>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnFrameTappedPractitioner"/>
                            </Border.GestureRecognizers>
                        </Border>

                        <!-- Patient Selection -->
                        <Border Padding="10" x:Name="PatientFrame" Stroke="Transparent" HorizontalOptions="FillAndExpand">
                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                <Image Source="patient.png" Style="{StaticResource SelectUserTypeImage}"/>
                                <Label Text="Patient" Style="{StaticResource SelectUserTypeLabel}" />
                            </StackLayout>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnFrameTappedPatient"/>
                            </Border.GestureRecognizers>
                        </Border>
                    </StackLayout>
                    
                    <!-- Email Input (Visible when Practitioner is selected) -->
                    <StackLayout x:Name="PractitionerTextBox">
                        <inputlayout:SfTextInputLayout Hint="Email">
                            <Entry Style="{StaticResource InputEntry}" x:Name="emailinput" Keyboard="Email" Text="{Binding LoginDetails.emailAddress}" ReturnType="Next"/>
                        </inputlayout:SfTextInputLayout>
                        <Label Text="{Binding LoginDetails.emailAddressError}" Style="{StaticResource ErrorLabel}"/>
                    </StackLayout>

                    <!-- Phone Number Input (Visible when Patient is selected) -->
                    <StackLayout  x:Name="PatientTextBox"  IsVisible="False">
                        <inputlayout:SfTextInputLayout Hint="Phone Number">
                            <Entry  Style="{StaticResource InputEntry}" MaxLength="10" x:Name="phoneinput" Text="{Binding LoginDetails.phoneNumber}" ReturnType="Next"/>
                        </inputlayout:SfTextInputLayout>
                        <Label Text="{Binding LoginDetails.phoneNumberError}" Style="{StaticResource ErrorLabel}"/>
                    </StackLayout>
                    
                    <StackLayout Margin="0,0,0,30" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="CenterAndExpand" Spacing="10">
                        <Button Text="Cancel" Clicked="OnCancelClicked" WidthRequest="100" Style="{StaticResource CancelButton}"/>
                        <Button Text="Proceed" Clicked="OnForgotSubmitClicked" WidthRequest="100" Style="{StaticResource SubmitButton}"/>
                    </StackLayout>

                </StackLayout>
            </Frame>
            <Frame IsVisible="{Binding IsBusy}" Style="{StaticResource ActivityIndicatorBackdrop}"/>
            <ActivityIndicator HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
   IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>