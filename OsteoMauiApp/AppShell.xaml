<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OsteoMAUIApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OsteoMAUIApp"
    xmlns:profile="clr-namespace:OsteoMAUIApp.Views.ProfileSettings"
    xmlns:event="clr-namespace:OsteoMAUIApp.Views.Event"
    Shell.FlyoutBehavior="Flyout"
    Title="OsteoMAUIApp">
    <FlyoutItem Title="Home" Icon="home.png" Route="MainPage">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Upcoming Events" Route="AllUpcomingNearbyEvents">
        <ShellContent
            Title="Upcoming Events"
            ContentTemplate="{DataTemplate event:AllUpcomingNearbyEvents}" />
    </FlyoutItem>

    <FlyoutItem Title="My Events" Route="MyEvents">
        <ShellContent
            Title="My Events"
            ContentTemplate="{DataTemplate event:MyEvents}" />
    </FlyoutItem>

    <FlyoutItem Title="Create Event" Route="CreateEvent">
        <ShellContent
            Title="Create Event"
            ContentTemplate="{DataTemplate event:CreateEvent}" />
    </FlyoutItem>

    <FlyoutItem Title="Invite To Event" Route="InviteToEvent">
        <ShellContent
            Title="Invite To Event"
            ContentTemplate="{DataTemplate event:InviteToEvent}" />
    </FlyoutItem>
    <!--<ShellContent
    Title="Profile Settings"
    ContentTemplate="{DataTemplate profile:ProfileIndex}"
    Route="ProfileIndex" />-->
   
</Shell>
